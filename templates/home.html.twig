{% extends 'base.html.twig' %}
{% block title %}Welcome Home{% endblock %}
{% block body %}
    <div id="monthlyproject">
        <div>
            <b-card-group deck>
                {% for monthlyproject in monthlyProjects %}
                    {% set projectdId = monthlyproject.artistbandplproject.id %}
                    <b-card title="{{ monthlyproject.plprojectname }}"
                            img-src="{{ asset('/rzik/'~monthlyproject.mainpictureplproject.picturefile) }}"
                            img-alt="{{ monthlyproject.artistbandplproject.artistbandname }}"
                            img-top>

                        <b-card-text>
                            {{ monthlyproject.descriptionplproject }}
                        </b-card-text>
                        <b-link href="{{ path('project_byartist', {'album': monthlyproject.plprojectname|lower, 'id' :   monthlyproject.id }) }}">
                            view more
                        </b-link>

                        <div slot="footer">
                            {{ monthlyproject.id }}

                            <small class="text-muted">Last updated 3 mins ago</small>
                        </div>
                    </b-card>
                    {#                    {{ monthlyproject.artistbandplproject.artistbandname }}#}
                {% endfor %}
            </b-card-group>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('build/home.js') }}"></script>
    {% endblock %}
